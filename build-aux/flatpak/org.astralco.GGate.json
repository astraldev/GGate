{
    "app-id" : "org.astralco.GGate",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "ggate",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home"
    ],
    "modules" : [
        {
            "name": "python-modules",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=${FLATPAK_DEST} pycairo pygobject igraph shapely packaging"
            ],
            "build-options": {
              "build-args": [
                "--share=network"
              ]
            },
            "sources": []
        },
        {
            "name" : "ggate",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "../../"
                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ],
    "build-options" : {
        "env" : {        }
    }
}
